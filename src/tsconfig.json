{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },

  "exclude": [
    "node_modules",
    "typings/global",
    "typings/global.d.ts"
  ],

  "files": [
    "main.ts",
    "main-app-shell.ts",
    "typings.d.ts",
    "node_modules/angularfire2/firebase3.d.ts"
  ]
}
